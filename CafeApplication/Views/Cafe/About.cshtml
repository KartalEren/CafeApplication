@{

    List<Setting> about = (List<Setting>)ViewBag.About;

}

<section class="position-absolute top-50 start-50 translate-middle">
    @foreach (var item in about)
    {


        <div class="card mb-3" style="max-width: 1620px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@item.Value" class="img-fluid rounded-start" alt="@item.Key">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@item.Key</h5>
                        <p class="card-text">@item.Description</p>

                    </div>
                </div>
            </div>
        </div>
    }
</section>